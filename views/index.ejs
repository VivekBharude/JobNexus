<%- include('./partials/header.ejs') %>

<link rel="stylesheet" href="/style.css">
<div class="container mb-4">
<div class="row search  mb-4" > 
<form action="/jobs" method="get" class="mt-4 ">
 <div class="search-bar">
    <input type="text" name="search" class="col-lg-8 " style="border: none; outline-style: none;" placeholder="Search For a Job">
    <input type="submit" value="search"  class="col-lg-2 btn btn-danger" style="border-radius: 20px;">
</div>
</form>
</div>
<h1 class=" heading">Top Companies Hiring Now</h1>

<div class="row">
    <% for(let job of foundJobs){ %>
    <div class="col-4 mt-4 "> 
        <div class="jobs-card card">
        <div><img class="img-fluid" src="<%= job.image %>" alt="" height="300" width="300"></div>
        <div class="fw-bold title"><p ><%= job.name %> </p></div>
        <div><a class="btn btn-outline-danger my-2 " href="/jobs/<%= job._id %>">View Job</a></div>
        </div>
    </div>
    <% } %>
  

</div>
</div>
<%- include('./partials/footer.ejs') %>
